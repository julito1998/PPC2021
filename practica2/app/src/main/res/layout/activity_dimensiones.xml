<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividad3.DimensionesDePantallaActivity">

    <TextView
        android:id="@+id/txtDimension"
        android:layout_width="313dp"
        android:layout_height="88dp"
        android:layout_marginBottom="460dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResultado"
        app:layout_constraintVertical_bias="0.097" />

    <Button
        android:id="@+id/btnObtenerDimension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="obtenerDimensionesEnDP"
        android:text="@string/dimensionesEnDP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDimension"
        app:layout_constraintVertical_bias="0.184" />

    <Button
        android:id="@+id/button2"
        android:layout_width="325dp"
        android:layout_height="55dp"
        android:text="@string/dimensionesEnPixel"
        android:onClick="obtenerDimensionesEnPixel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnObtenerDimension" />


</androidx.constraintlayout.widget.ConstraintLayout>